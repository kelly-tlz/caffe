name: "lstm_language_model"
layer {
  name: "data"
  type: "HDF5Data"
  top: "sentence"
  top: "language"
  # include { phase: TRAIN }
  hdf5_data_param {
    source: "hello_embed_filelist.txt"
    batch_size: 4
  }
}
layer {
  name: "embedding"
  type: "Embed"
  bottom: "sentence"
  top: "embedded_input_sentence"
  param {
    lr_mult: 1
  }
  embed_param {
    bias_term: false
    input_dim: 256  # = chars (0 for EOS)
    # input_dim: 8801  # = vocab_size + 1 (for EOS)
    num_output: 100
    weight_filler {
      type: "xavier"
    }
  }
}

