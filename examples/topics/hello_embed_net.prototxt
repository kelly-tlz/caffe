layer {
  name: "predict"
  type: "InnerProduct"
  bottom: "embedded_input_sentence"
  top: "predict"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 0
  }
  inner_product_param {
    num_output: 2 
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "xavier"
    }
    axis: 2
  }
}
layer {
  name: "cross_entropy_loss"
  type: "SoftmaxWithLoss"
  bottom: "predict"
  bottom: "language"
  top: "cross_entropy_loss"
  # loss_weight: 20
  #  loss_param {
  #    ignore_label: -1
  #  }
   softmax_param {
     axis: 2
   }
}
layer {
  name: "accuracy"
  type: "Accuracy"
  bottom: "predict"
  bottom: "language"
  top: "accuracy"
